# systemctl aliases (sc*)

# Generic alias for systemctl
alias sc="sudo systemctl"

# Get service status
alias scs="sudo systemctl status"

# Restart service
alias scr="sudo systemctl restart"

# Start service
alias scup="sudo systemctl start"

# Stop service
alias scdn="sudo systemctl stop"

# Enable service
alias scup!="sudo systemctl enable"

# Disable service
alias scdn!="sudo systemctl disable"
