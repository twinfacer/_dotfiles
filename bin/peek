#!/usr/bin/env zsh
# require 'ls cat wc pwd'
# peek - smart filesystem lookup utility.
# Display content of directory (current directory without arguments) of file (paginated if required).

if [[ -d $1 || -z $1 ]]; then
  ls -lAhF ${1:-$(pwd)}
else
  local length=$(cat $1 | wc -l)
  if [[ $length -gt 80 ]]; then
    cat $1 | less
  else
    cat $1
  fi
fi
